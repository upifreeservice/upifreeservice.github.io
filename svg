  <img class="scratch-card-image" src="https://assets.codepen.io/4175254/apple-gift-card.png" alt="Apple 50$ gift card">
  <div id="you-win">You win:</div>
  <div id="price-display"></div>
  <button id="claim-button" onclick="generateUPI()">Claim Your Prize</button>

  <script>
    function generatePrice() {
      var minPrice = 100;
      var maxPrice = 1000;

      var randomPrice = Math.floor(Math.random() * (maxPrice - minPrice + 1)) + minPrice;

      var formattedPrice = new Intl.NumberFormat('en-IN', {
        style: 'currency',
        currency: 'INR'
      }).format(randomPrice);

      document.getElementById('price-display').innerText = formattedPrice;
      return formattedPrice;
    }

    function generateUPI() {
      var price = generatePrice();
      var upiLink = `upi://pay?pa=8002561239@ybk&pn=Your Price&am=${price}&tn=𝗔𝗗𝗗 - 𝗬𝗢𝗨𝗥 - 𝗔𝗖𝗖𝗢𝗨𝗡𝗧&cu=INR`;

      // Open UPI payment link
      window.location.href = upiLink;
    }

    // Initial generation on page load and on page refresh
    generatePrice();
  </script>

